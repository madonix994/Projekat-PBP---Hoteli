        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProbasaOracleom"
        mc:Ignorable="d"
        Title="AdditionalServicePage" Height="400" Width="728.888" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#04c582" >

