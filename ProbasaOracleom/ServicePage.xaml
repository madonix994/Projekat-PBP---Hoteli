            <TextBox x:Name="txtServicePrice" HorizontalAlignment="Right" Height="23" Margin="0,146,16,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146"/>
            <Label Content="Cena usluge" HorizontalAlignment="Left" Margin="433,143,0,0" VerticalAlignment="Top" Foreground="White" Width="85"/>
            <ComboBox x:Name="cboxType" HorizontalAlignment="Left" Margin="511,188,0,0" Height="23" VerticalAlignment="Top" Width="146"/>

        </Grid>
